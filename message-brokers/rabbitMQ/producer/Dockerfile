# ğŸ—ï¸ Use Maven to build the app
FROM maven:3.8.7-amazoncorretto-17 AS build

WORKDIR /app

# ğŸ‘‡ Copy pom.xml & download dependencies
COPY pom.xml .
RUN mvn dependency:go-offline

# ğŸ‘‡ Copy source code
COPY src ./src

# ğŸ‘‡ Package the application
RUN mvn clean package -DskipTests

# ğŸƒ Now create the final image
FROM amazoncorretto:17-alpine

WORKDIR /app

# ğŸ‘‡ Copy the built jar from the builder stage
COPY --from=build /app/target/*.jar app.jar

# ğŸ”¥ Run the Spring Boot app
ENTRYPOINT ["java","-jar","app.jar"]
